<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
  <% if @book && @book.errors.any? %>
  <div class="alert alert-danger">
    <h4>error</h4>
    <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
    <%= render 'shared/sidebar', user: @user,book:@book %>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user) do %>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag url_for(book.user.profile_image), class: "img-thumbnail", size: "64x64" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', class: "img-thumbnail", size: "64x64" %>
                <% end %>
              <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td>
              <p class="mb-0 me-4"><%= book.body %></p> 
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

