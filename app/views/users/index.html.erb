<p id="notice"></p>
<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'shared/sidebar', user: @user,book:@book %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <% if user.profile_image.attached? %>
                <%= image_tag url_for(user.profile_image), class: "img-thumbnail", size: "64x64" %>
              <% else %>
                <%= image_tag 'default-image.jpg', class: "img-thumbnail", size: "64x64" %>
              <% end %>
            </td>
            <td>
              <p class="mb-0 me-4"><%= user.name %></p>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>