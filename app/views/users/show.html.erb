<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'shared/sidebar', user: @user,book:@book %>

    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>

      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th> <!-- ユーザー画像 -->
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @user.books.each do |book| %>
            <tr>
              <td>
                <% if book.user.profile_image.attached? %>
                  <%= image_tag url_for(book.user.profile_image), class: "img-thumbnail", size: "64x64" %>
                <% else %>
                  <%= image_tag 'default-image.jpg', class: "img-thumbnail", size: "64x64" %>
                <% end %>
              </td>
              <td>
                <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>