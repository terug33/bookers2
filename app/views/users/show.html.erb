<div class='container px-5 px-sm-0'>
  <div class='row'>
    <%= render 'shared/sidebar' %>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody></tbody>
      </table>
      <% @user.books.each do |book| %>
        <div class="media mb-4">
    <!-- 左側：画像のみ -->
    <div class="mr-3">
      <% if book.user.profile_image.attached? %>
        <%= image_tag url_for(book.user.profile_image), class: "img-thumbnail", size: "64x64" %>
      <% else %>
        <%= image_tag 'default-image.jpg', class: "img-thumbnail", size: "64x64" %>
      <% end %>
    </div>

    <!-- 右側：タイトルと本文 -->
    <div class="media-body">
      <h5 class="mt-0">
        <%= link_to book.title, book_path(book), class: "text-decoration-none" %>
      </h5>
      <p><%= book.body %></p>
    </div>
  </div>
<% end %>
      
    </div>
  </div>
</div>