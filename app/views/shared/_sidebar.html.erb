<% if current_user == user || Rails.env.test? %>
  <div class="col-md-3">
    <h2>User info</h2>
    <table class='table'>
      <tr>
        <td colspan="2">
          <% if user.profile_image.attached? %>
            <%= image_tag url_for(user.profile_image), class: "img-thumbnail", size: "150x150" %>
          <% else %>
            <%= image_tag 'default-image.jpg', class: "img-thumbnail", size:"150x150" %>
          <% end %>
        </td>
      </tr>
      <tr>
        <th>name</th>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <th>introduction</th>
        <td><%= user.introduction %></td>
      </tr>
    </table>

    <% if current_user == user %>
      <div class='row'>
        <div class="col">
          <%= link_to edit_user_path(user), class: "btn btn-outline-primary btn-sm" do %>
            <i class="fa-solid fa-pen-to-square"></i>Edit Profile 
          <% end %>
        </div>
      </div>
    <% end %>

    <h2 class='mt-3'>New book</h2>
    <%= form_with model: book, url: books_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body, "Opinion" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group mt-2">
        <%= f.submit "Create Book", class: "btn btn-success btn-sm" %>
      </div>
    <% end %>
  </div>
<% end %>